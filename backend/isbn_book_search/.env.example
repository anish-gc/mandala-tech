# Django Configuration
SECRET_KEY=your-new-secret-key-generate-a-new-one-for-production
DEBUG=False
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,your-server-ip

# Database Configuration (PostgreSQL recommended for production)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=isbn_book_search_db
DB_USER=your_db_user
DB_PASSWORD=your_secure_db_password
DB_HOST=localhost
DB_PORT=5432
DB_SSLMODE=require

# API Configuration
ISBNDB_API_KEY=a
ISBNDB_BASE_URL=https://api2.isbndb.com

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com,https://www.your-frontend-domain.com

# Security Configuration
SECURE_SSL_REDIRECT=True

# Email Configuration (for error reporting)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
ADMIN_EMAIL=admin@your-domain.com
SERVER_EMAIL=server@your-domain.com

# API Rate Limiting
API_THROTTLE_ANON=100/hour
API_THROTTLE_USER=1000/hour

# Cache Configuration (Redis recommended for production)
CACHE_BACKEND=django_redis.cache.RedisCache
CACHE_LOCATION=redis://127.0.0.1:6379/1